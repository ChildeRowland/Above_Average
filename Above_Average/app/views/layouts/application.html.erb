<!DOCTYPE html>
<html>
<head>
  <title>AboveAverage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="wrapper">

			<ul class="navbar-inverse">
				<li>
					<%= link_to "About", root_path %>
				</li>
				<li>
					<%= link_to "Sign Up", new_user_registration_path %>
				</li>
				<li>
					<%= link_to "Punch", punch_path %>
				</li>
				<li>
					<%= link_to_if current_user.nil?, 'Sign-in', new_user_session_path, method: :get do link_to 'Sign-out', destroy_user_session_path, method: :delete end %> 
				</li>
					<% if !current_user.nil? %>
				<li>
						<%= link_to "User Home", user_path(:id => session.id), method: :get %>
				</li>
					<% end %>
			</ul>

		<p class="notice"><%= notice %></p>
	   	<p class="alert"><%= alert %></p>

	<%= yield %>


	</div>
</body>
</html>
